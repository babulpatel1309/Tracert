<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.kid.retro.com.tracerttask.RegistrationSelectGender">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/imgGenderMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/user_male"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/imgGenderFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/user_female"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>
